<!-- Include Chart.js library -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Sample data for India's GDP for the past 10 years (in billions USD)
    const years = ['2013', '2014', '2015', '2016', '2017', '2018', '2019', '2020', '2021', '2022'];
    const gdp = [1860, 2040, 2100, 2290, 2650, 2702, 2835, 2674, 3167, 3353]; // GDP in billions USD

    // Get the canvas element
    const ctx = document.getElementById('gdpChart').getContext('2d');

    // Create the chart
    const gdpChart = new Chart(ctx, {
        type: 'bar', // Use 'bar' for a bar chart
        data: {
            labels: years, // Years on the Y-axis
            datasets: [{
                label: 'GDP (in billions USD)',
                data: gdp, // GDP values on the X-axis
                backgroundColor: 'rgba(54, 162, 235, 0.6)', // Bar color
                borderColor: 'rgba(54, 162, 235, 1)',
                borderWidth: 1,
            }]
        },
        options: {
            indexAxis: 'y', // Switches the chart to have the Y-axis as the primary axis
            responsive: true,
            scales: {
                x: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'GDP (in billions USD)'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Year'
                    }
                }
            },
            plugins: {
                legend: {
                    display: true,
                    position: 'top',
                },
                tooltip: {
                    enabled: true,
                    mode: 'index',
                    intersect: false,
                }
            }
        }
    });
    </script>
